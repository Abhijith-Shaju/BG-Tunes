<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationTitle>BG-Tunes</ApplicationTitle>
    <AssemblyTitle>BG-Tunes</AssemblyTitle>
    <Product>BG-Tunes</Product>
    <Description>A lightweight system tray music player with automatic device monitoring</Description>
    <Copyright>Copyright Â© 2024</Copyright>
    <Version>1.0.0</Version>
    <FileVersion>1.0.0.0</FileVersion>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <ApplicationIcon>BG-Tunes.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="NAudio.Lame" Version="2.0.1" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\*.mp3" />
    <None Include="BG-Tunes.ico" />
  </ItemGroup>

</Project> 